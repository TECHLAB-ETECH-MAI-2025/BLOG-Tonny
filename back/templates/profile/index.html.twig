{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
            <h1 class="text-2xl font-bold text-gray-800 mb-6">Mon Profil</h1>

            {{ form_start(form) }}
            <div class="space-y-4">
                {{ form_row(form.username, {
                    'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'},
                    'row_attr': {'class': 'space-y-1'}
                }) }}

                {{ form_row(form.email, {
                    'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'},
                    'row_attr': {'class': 'space-y-1'}
                }) }}

                {{ form_row(form.plainPassword, {
                    'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md'},
                    'row_attr': {'class': 'space-y-1'}
                }) }}
            </div>

            <button type="submit" class="mt-6 w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition-colors shadow-sm">
                Enregistrer les modifications
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}