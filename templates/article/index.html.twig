{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4 w-screen">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold mb-2 text-gray-800">Liste des Articles</h1>
                <p class="text-gray-600">Gérez vos articles et filtrez par catégorie</p>
            </div>
            <div>
                <a href="{{ path('app_article_new') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition duration-200 flex items-center">
                    <i class="fas fa-plus-circle mr-2"></i> Nouvel Article
                </a>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg  mb-8 ">
            <div class="flex justify-between items-center mb-4">
                <h4 class="text-xl font-semibold text-gray-700">Filtres</h4>
                <button id="reset-filters" class="bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-md transition duration-200 flex items-center">
                    <i class="fas fa-redo mr-2"></i> Réinitialiser
                </button>
            </div>
            <div class="mb-4">
                <div class="mb-4">
                    <label for="category-filter" class="block text-gray-700 text-sm font-semibold mb-2">Catégorie</label>
                    <select id="category-filter" class="border border-gray-300 rounded-md w-52 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200">
                        <!-- Options chargées dynamiquement -->
                    </select>

                </div>
            </div>
        </div>

        <div class="overflow-x-auto bg-white rounded-lg border border-gray-100 p-3">
            <table id="articles-datatable" class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">ID</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Titre</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Contenu</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Catégories</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Date de création</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Actions</th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                <!-- Les données seront chargées dynamiquement par DataTables -->
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
