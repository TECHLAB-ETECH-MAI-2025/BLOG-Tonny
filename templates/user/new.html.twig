{% extends 'base.html.twig' %}

{% block title %}{{ (user.id ? 'Edit' : 'Create') ~ ' User' }}{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">{{ (user.id ? 'Edit' : 'Create') ~ ' User' }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword) }}
        {{ form_row(form.roles) }}

        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            {{ user.id ? 'Update' : 'Create' }}
        </button>
        <a href="{{ path('admin_user_index') }}" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded ml-2">
            Cancel
        </a>
        {{ form_end(form) }}
    </div>
{% endblock %}