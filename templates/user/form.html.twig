{% extends 'base.html.twig' %}

{% block title %}
    {{ action == 'create' ? 'Création' : 'Édition' }} utilisateur
{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gray-50 py-8">
        <div class="container mx-auto px-4">
            <div class="max-w-md mx-auto">
                <a href="#" onclick="window.history.back(); return false;"
                   class="text-gray-600 hover:text-blue-500 mb-6 inline-flex items-center transition-all duration-200 hover:-translate-x-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    <span class="text-sm">Retour</span>
                </a>

                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">
                        {{ action == 'create' ? 'Créer un utilisateur' : 'Éditer l\'utilisateur' }}
                    </h1>

                    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

                    <div class="mb-4">
                        {{ form_label(form.username, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-150'}}) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.username) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.email, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-150'}}) }}
                        <div class="text-red-600 text-xs mt-1">
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    {% if form.plainPassword is defined %}
                        <div class="mb-4">
                            {{ form_label(form.plainPassword, null, {'attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm transition-all duration-150'}}) }}
                            <div class="text-red-600 text-xs mt-1">
                                {{ form_errors(form.plainPassword) }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="flex items-center mb-6">
                        {{ form_widget(form.isAdmin, {'attr': {'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded mr-2'}}) }}
                        {{ form_label(form.isAdmin, null, {'attr': {'class': 'text-sm text-gray-700'}}) }}
                    </div>

                    <div class="flex gap-3 pt-2">
                        <button type="submit" class="flex-1 bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-150">
                            {{ action == 'create' ? 'Créer l\'utilisateur' : 'Mettre à jour' }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}